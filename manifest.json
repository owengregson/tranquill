{
    "manifest_version": 3,
    "name": "tranquill",
    "description": "Real-time automated typing bot for Google Chrome.",
    "version": "1.1.3",
    "icons": {
        "16": "./assets/images/icon_16x.png",
        "48": "./assets/images/icon_48x.png",
        "128": "./assets/images/icon_128x.png"
    },
    "options_page": "./pages/settings.html",
    "action": {
        "default_title": "Main Menu",
        "default_popup": "./pages/update.html"
    },
    "permissions": ["storage", "debugger", "background", "activeTab", "scripting"],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "./js/service-worker.js"
    },
    "content_scripts": [{
        "js": ["./js/foreground.js"],
        "matches": ["https://docs.google.com/document/d/*"]
    }]
}
